
//Arquivo de configuração de banco de dados,onde sera configurado o SQLITE

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User{
  id   String @id @default(uuid()) //Cria um Id AutoIncrement de tipo uuid
  name  String 
  github_id Int
  avatar_url String
  login String

  @@map("users")
  messages Message[] //Nomeia a tabela, no caso a tabela no banco vai se chamar Users
}



model Message{
  id   String @id @default(uuid())
  text String
  created_at DateTime @default(now())

    user User @relation(fields: [user_id],references: [id])

  user_id String
  @@map("messages")
}